        {
          "id": "slider-handle",
          "shape": "roundedRect",
          "rect": { "x": 92, "y": 10, "width": 16, "height": 16, "radius": 8 },
          "style": { "fill": "ui.accent", "stroke": "ui.strokeLight", "strokeWidth": 2 },
          "role": "decoration",
          "importance": "secondary"
        }
      ]
    }
  ],
  "instances": [
    {
      "id": "radial-slider-instance",
      "componentId": "radial-slider",
      "anchorTo": "canvas",
      "anchor": "topLeft",
      "offset": { "x": 520, "y": 220 },
      "size": { "width": 200, "height": 200 },
      "role": "control",
      "importance": "secondary",
      "state": "default",
      "constraint_flags": ["min_tap"],
      "constraint_params": {
        "min_tap": { "width": 48, "height": 48 },
        "snap_steps": 24,
        "drag_angle_range": { "min": -150, "max": 150 }
