{
  "version": "0.4.0",
  "assetType": "screen",
  "metadata": {
    "name": "Radial Slider",
    "description": "Radial slider control for continuous adjustment",
    "tags": ["screen", "dial", "radial"]
  },
  "patternId": "radial_slider",
  "canvas": {
    "width": 1280,
    "height": 720,
    "safeArea": { "x": 40, "y": 40, "width": 1200, "height": 640 }
  },
  "components": [
    {
      "id": "radial-slider",
      "name": "Radial Slider",
      "role": "control",
      "importance": "secondary",
      "viewBox": [0, 0, 200, 200],
      "layers": [
        {
          "id": "slider-track",
          "shape": "gauge",
          "rect": { "x": 0, "y": 0, "width": 200, "height": 200, "radius": 0 },
          "style": { "fill": "ui.primaryGradient" },
          "track": "ui.surface",
          "shape_profile": "radial",
          "shape_params": { "start_angle": -120, "sweep": 240, "thickness": 12 },
          "value_model": { "meaning": "adjust_value", "value": 0.35, "max": 1, "unit": "ratio" },
